rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users if they are authenticated
    // WARNING: This rule is insecure for production environments.
    // It grants full read/write access to any authenticated user.
    // You should implement more granular rules before deploying to production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

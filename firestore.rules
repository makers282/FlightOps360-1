rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users under
    // the /users/{userId} collection for their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Add specific rules for your collections below
    match /aircraft_discrepancies/{discrepancyId} {
      allow read: if request.auth != null; // Allow read for any authenticated user
    }

    // Allow full access for fleet and rates for any authenticated user
    match /fleet_aircraft/{aircraftId} {
      allow read, write: if request.auth != null;
    }
    match /aircraft_rates/{rateId} {
      allow read, write: if request.auth != null;
    }

    // Default deny for any path not explicitly matched
    // IMPORTANT: This rule must come LAST
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

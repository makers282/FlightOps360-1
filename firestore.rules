rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users under
    // the /users/{userId} collection for their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Lock down all other collections by default
    // Add specific rules for your collections below
    // Example:
    // match /yourCollection/{document} {
    //   allow read: if true; // Or your specific condition
    //   allow write: if request.auth != null; // Or your specific condition
    // }

    // Default deny for any path not explicitly matched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
